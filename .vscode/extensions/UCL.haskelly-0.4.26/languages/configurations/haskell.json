{
    "comments": {
        "lineComment": "--",
        "blockComment": ["{-", "-}"]
    },
    "brackets": [
       ["{", "}"],
       ["[", "]"],
       ["(", ")"]
   ],
   "autoClosingPairs": [
       { "open": "{", "close": "}" },
       { "open": "[", "close": "]" },
       { "open": "(", "close": ")" },
       { "open": "\"", "close": "\"", "notIn": ["string"] },
       { "open": "`", "close": "`", "notIn": ["string", "comment"] }
   ],
   "surroundingPairs": [
       ["{", "}"],
       ["[", "]"],
       ["(", ")"],
       ["'", "'"],
       ["\"", "\""],
       ["`", "`"]
   ],
   "indentationRules": {
       "decreaseIndentPattern": "[\\]})][ \\t]*$/m",
       "increaseIndentPattern": "((\\b(if\\b.*|then|else|do|of|let|in|where))|=|->|>>=|>=>|=<<|(^(data)( |\t)+(\\w|')+( |\\t)*))( |\\t)*$/"
   }
}